                <Grid Background="#FFE5E5E5">
                    <ListBox x:Name="shouldBeEnabledListBox" HorizontalAlignment="Left" Height="372" Margin="10,10,0,0" VerticalAlignment="Top" Width="568" SelectionMode="Multiple"/>
                </Grid>
            </TabItem>
            <TabItem Header="Should be enabled but don't exist" Margin="21,-2,-61,0">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="259*"/>
                        <ColumnDefinition Width="152*"/>
                        <ColumnDefinition Width="53*"/>
                        <ColumnDefinition Width="124*"/>
                    </Grid.ColumnDefinitions>
                    <ListBox x:Name="dontExistListBox" HorizontalAlignment="Left" Height="372" Margin="10,10,0,0" VerticalAlignment="Top" Width="568" Grid.ColumnSpan="4" SelectionMode="Multiple"/>
                </Grid>
            </TabItem>
            <TabItem Header="Should be disabled" Margin="62,-2,-62,0">
                <Grid Background="#FFE5E5E5">
                    <ListBox x:Name="shouldBeDisabledListBox" HorizontalAlignment="Left" Height="372" Margin="10,10,0,0" VerticalAlignment="Top" Width="568" SelectionMode="Multiple"/>
                </Grid>
            </TabItem>
            <TabItem Header="Custom config files" Margin="64,-2
                     ,-64,0">
                <Grid Background="#FFE5E5E5" Margin="0,1,0,-1">
                    <ListBox x:Name="customFiles" HorizontalAlignment="Left" Height="371" Margin="10,10,0,0" VerticalAlignment="Top" Width="568" SelectionMode="Multiple"/>
                </Grid>
            </TabItem>
        </TabControl>


    </Grid>
</Window>
